{
    "name": "maciejbuchert/nano",
    "type": "library",
    "description": "Nano is a very very tiny php app that allows you to create very fast rest interfaces.",
    "keywords": [
        "midorikocak",
        "nano",
        "api",
        "rest",
        "maciejbuchert"
    ],
    "homepage": "https://github.com/maciejbuchert/nano",
    "license": "MIT",
    "authors": [
        {
            "name": "Midori Kocak",
            "email": "mtkocak@gmail.com",
            "homepage": "https://mtkocak.net",
            "role": "Developer"
        },
        {
            "name": "Maciej Buchert",
            "email": "maciej@buchert.pl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~8.2",
        "ext-json": "*",
        "monolog/monolog": "^3.7"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^6.5",
        "opsway/psr12-strict-coding-standard": "^0.5.0",
        "phpunit/phpunit": ">=8.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/process": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "maciejbuchert\\nano\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "maciejbuchert\\nano\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -vs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
